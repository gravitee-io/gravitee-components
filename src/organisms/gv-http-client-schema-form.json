{
  "type": "object",
  "id": "urn:jsonschema:io:gravitee:http:client",
  "properties": {
    "method": {
      "title": "HTTP Method",
      "description": "HTTP method to invoke the endpoint.",
      "type": "string",
      "default": "GET",
      "enum": ["GET", "POST", "PUT", "DELETE", "PATCH", "HEAD", "CONNECT", "OPTIONS", "TRACE"]
    },
    "path": {
      "title": "Path",
      "type": "string",
      "default": "/"
    },
    "headers": {
      "type": "array",
      "title": "Request Headers",
      "items": {
        "type": "object",
        "title": "Header",
        "properties": {
          "name": {
            "title": "Name",
            "type": "string"
          },
          "value": {
            "title": "Value",
            "type": "string"
          }
        }
      },
      "required": ["name", "value"],
      "default": [
        {
          "name": "",
          "value": ""
        }
      ]
    },
    "body": {
      "title": "Request body",
      "type": "string",
      "x-schema-form": {
        "type": "codemirror",
        "codemirrorOptions": {
          "placeholder": "Put request body here",
          "lineWrapping": true,
          "lineNumbers": true,
          "allowDropFileTypes": true,
          "autoCloseTags": true
        }
      }
    }
  },
  "required": ["method", "path"]
}
